pipeline {
agent any
def app
stages {
    stage('SCM Checkout')
    {
        checkout scm
    }

    stage('Maven Build')
    {
        steps {
         sh 'mvn clean install' 
        }
        post {
                success {
                    stage('Build Image')
                }
            }
    }
    
    stage('Build Image')
    {
        app = docker.build("ritul3007/devops_practice","./vaadin-crm")
    }
	
	stage('Test Image'){
	
	app.inside {
	
				echo "test passed"
	            stage('PUSH image to Docker Hub')
				}
		
	}
	
    stage('PUSH image to Docker Hub')
    {
	
		docker.withRegistry('https://registry.hub.docker.com', 'docker-hub') {
		app.push("${env.BUILD_NUMBER}")
		app.push("latest")
		}
		
		echo "Trying to Push Docker Image"
    }
	} 	 	
}
